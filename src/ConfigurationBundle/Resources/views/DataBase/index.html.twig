{% extends "@Configuration/Default/index.html.twig" %}
{% block body %}
    <div class="l-8">
        <div class="line">
        {% if not configs.config %}
            <div class="bg-info margin-bottom">
                <p>To run the application you need to set the parameters to the database
                    located in the directory <strong> path/to/admin/app/config/parameters.yml.</strong>
                    Set the following values:</p>
            </div>
            <div class=" l-4 center">
                    {% for config in configs %}
                        {% if config %}
                <div class="bg-danger  text-center">{{ config }}<br></div>
                        {% endif %}
                    {% endfor %}
            </div>
        {% endif %}
            {% if configs.config %}
                <div class="bg-info">
                    <p>Your database has settings for the connection. If you agree with them go the next step by clicking "Next"</p>
                </div>
            {% endif %}
        </div>
    </div>
    <div class="l-12 ">

        <a href="{{ path('configuration_admin') }}" class="btn btn-success right  navbar-inverse {% if not configs.config %} disabled {% endif %} " >Next</a>
        <a href="{{ path('configuration_homepage') }}" class="btn btn-warning right  navbar-inverse">Previust</a>
    </div>
{% endblock %}